<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F2D2F"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#937417"
            app:cornerRadius="10dp"
            android:text="Play"
            android:textColor="#FFFFFF"
            app:icon="@drawable/icons8_play_50"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#937417"
            app:cornerRadius="10dp"
            android:text="Continue"
            android:textColor="#FFFFFF"
            app:icon="@drawable/icons8_resume_button_50"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#937417"
            app:cornerRadius="10dp"
            android:text="Settings"
            android:textColor="#FFFFFF"
            app:icon="@drawable/icons8_settings_200___"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#937417"
            app:cornerRadius="10dp"
            android:text="Share"
            android:textColor="#FFFFFF"
            app:icon="@drawable/icons8_share_50"
            app:iconTint="#FFFFFF" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="166dp"
        android:layout_height="163dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125"
        tools:srcCompat="@drawable/photo_2020_03_18_15_07_00" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APPNAME"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>